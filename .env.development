# MCP ADHD Server Development Environment Configuration
# This file contains development-specific overrides

# ============================================================================
# DEVELOPMENT CONFIGURATION OVERRIDES
# ============================================================================

# Application Environment
ENVIRONMENT=development
LOG_LEVEL=DEBUG
DEBUG=true

# ============================================================================
# DATABASE CONFIGURATION (Development)
# ============================================================================

# PostgreSQL Database (Development)
POSTGRES_DB=mcp_adhd_dev
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=dev_password_123
POSTGRES_PORT=5433

# Database URL for development
DATABASE_URL=postgresql+asyncpg://dev_user:dev_password_123@localhost:5433/mcp_adhd_dev

# ============================================================================
# REDIS CONFIGURATION (Development)  
# ============================================================================

# Redis Cache (Development database)
REDIS_URL=redis://localhost:6379/1
REDIS_PORT=6379
REDIS_MAXMEMORY=128mb

# ============================================================================
# SERVER CONFIGURATION (Development)
# ============================================================================

# Development Server
APP_PORT=8001
HOST=127.0.0.1
PORT=8001

# Auto-reload for development
ENABLE_AUTO_RELOAD=true

# ============================================================================
# DEVELOPMENT SECURITY (Relaxed)
# ============================================================================

# Development Keys (NOT FOR PRODUCTION!)
SECRET_KEY=dev_secret_key_not_for_production
JWT_SECRET=dev_jwt_secret_not_for_production

# Allowed Hosts (Development)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ============================================================================
# DEVELOPMENT FEATURES
# ============================================================================

# Enhanced Development Features
ENABLE_DEBUG_TOOLBAR=true
ENABLE_DETAILED_ERRORS=true
ENABLE_QUERY_LOGGING=true

# ADHD Performance (Relaxed for Development)
MAX_RESPONSE_TIME_MS=5000
MAX_COGNITIVE_PROCESSING_MS=2000
MAX_PATTERN_MATCH_MS=200

# ============================================================================
# DEVELOPMENT MONITORING
# ============================================================================

# Development Monitoring Ports
PROMETHEUS_PORT=9091
GRAFANA_PORT=3001

# Grafana Development Auth
GRAFANA_USER=dev
GRAFANA_PASSWORD=dev

# ============================================================================
# DEVELOPMENT TESTING
# ============================================================================

# Test API Keys (Mock services)
OPENAI_API_KEY=test_openai_key
OPENAI_MODEL=gpt-4o

TELEGRAM_BOT_TOKEN=test_bot_token
TELEGRAM_CHAT_ID=test_chat_id

# ============================================================================
# DEVELOPMENT FEATURE FLAGS
# ============================================================================

# Enable experimental features for development
ENABLE_EXPERIMENTAL_FEATURES=true
ENABLE_MOCK_LLM=true
ENABLE_VERBOSE_LOGGING=true

# Relaxed rate limiting for development
RATE_LIMIT_REQUESTS_PER_MINUTE=1000