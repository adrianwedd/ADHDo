# MCP ADHD Server Configuration
# Copy this file to .env and update the values

# Server Configuration
DEBUG=true
LOG_LEVEL=INFO
HOST=127.0.0.1
PORT=8000

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# OpenAI Configuration (Optional - system works without)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Telegram Configuration (Optional - for nudges)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Database Configuration (Future use)
DATABASE_URL=postgresql+asyncpg://mcp:password@localhost:5432/mcp_adhd

# Feature Flags
ENABLE_VOICE_INPUT=false
ENABLE_SCREEN_MONITORING=false
ENABLE_PUNISHMENT_MODE=false
ENABLE_ENERGY_TRACKING=true
EOF < /dev/null