# MCP ADHD Server Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# PRODUCTION DEPLOYMENT CONFIGURATION
# ============================================================================

# Application Environment
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Build Information (for Docker builds)
BUILD_DATE=
VERSION=1.0.0
VCS_REF=

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL Database
POSTGRES_DB=mcp_adhd
POSTGRES_USER=mcpuser
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432

# Database URL (constructed automatically in docker-compose)
DATABASE_URL=postgresql+asyncpg://mcpuser:your_secure_postgres_password_here@localhost:5432/mcp_adhd

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379
REDIS_MAXMEMORY=256mb

# ============================================================================
# APPLICATION SECURITY
# ============================================================================

# Security Keys (GENERATE YOUR OWN!)
SECRET_KEY=your_secret_key_here_generate_a_strong_one
JWT_SECRET=your_jwt_secret_here_also_generate_a_strong_one

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Application Server
APP_PORT=8000
HOST=0.0.0.0
PORT=8000

# ============================================================================
# EXTERNAL SERVICE INTEGRATIONS (Optional)
# ============================================================================

# OpenAI API (for LLM features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Telegram Bot Integration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Google Calendar Integration (for ADHD time management)
GOOGLE_CALENDAR_ENABLED=true
GOOGLE_CALENDAR_CREDENTIALS_FILE=path/to/google-calendar-credentials.json
GOOGLE_CALENDAR_ID=primary
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:8000/api/calendar/callback

# ============================================================================
# ADHD PERFORMANCE OPTIMIZATION
# ============================================================================

# Response Time Targets (milliseconds)
MAX_RESPONSE_TIME_MS=3000
MAX_COGNITIVE_PROCESSING_MS=1000
MAX_PATTERN_MATCH_MS=100

# Memory and Performance Limits
MAX_MEMORY_USAGE_MB=256
MAX_CONCURRENT_REQUESTS=50

# ============================================================================
# MONITORING AND METRICS
# ============================================================================

# Metrics Collection
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc

# Monitoring Services Ports
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Grafana Authentication
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_admin_password_here

# ============================================================================
# ADHD-SPECIFIC FEATURES
# ============================================================================

# Feature Flags
ENABLE_VOICE_INPUT=false
ENABLE_SCREEN_MONITORING=false
ENABLE_PUNISHMENT_MODE=false
ENABLE_ENERGY_TRACKING=true

# Cognitive Load Management
ENABLE_COGNITIVE_LOAD_TRACKING=true
COGNITIVE_LOAD_ALERT_THRESHOLD=0.8
ENABLE_OVERWHELM_DETECTION=true

# Hyperfocus Support
ENABLE_HYPERFOCUS_DETECTION=true
HYPERFOCUS_SESSION_MAX_HOURS=6
HYPERFOCUS_BREAK_REMINDER_INTERVAL=120

# Dopamine Reward System
ENABLE_DOPAMINE_REWARDS=true
BASE_REWARD_POINTS=10
CELEBRATION_THRESHOLD=100

# ============================================================================
# NOTIFICATION AND NUDGING
# ============================================================================

# Nudge System Configuration
ENABLE_NUDGES=true
DEFAULT_NUDGE_METHODS=web,telegram
NUDGE_FREQUENCY_MINUTES=30

# Alert System
ENABLE_ALERTS=true
ALERT_CHANNELS=web,telegram,log
CRITICAL_ALERT_THRESHOLD=0.9

# ============================================================================
# HEALTH CHECK CONFIGURATION
# ============================================================================

# Health Check Intervals
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Component Health Thresholds
MAX_DB_RESPONSE_TIME_MS=500
MAX_REDIS_RESPONSE_TIME_MS=100
MAX_LLM_RESPONSE_TIME_MS=5000

# ============================================================================
# SECURITY HEADERS AND RATE LIMITING
# ============================================================================

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60