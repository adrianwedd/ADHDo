# MCP ADHD Server - Environment Configuration Template
# Auto-generated during setup - customize as needed

# Server Configuration
DEBUG=true
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# OpenAI Configuration (REQUIRED for LLM processing)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=1500

# Telegram Configuration (REQUIRED for nudges)
# 1. Message @BotFather on Telegram and create a new bot with /newbot
# 2. Get your chat ID by messaging @userinfobot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Redis Configuration (auto-configured)
REDIS_URL=redis://localhost:6379/0
REDIS_DB=0

# Database Configuration (using SQLite for personal use)
DATABASE_URL=sqlite+aiosqlite:///./adhd_server.db

# Nudge Engine Configuration (ADHD-optimized)
NUDGE_TIER_0_DELAY=300    # 5 minutes - gentle
NUDGE_TIER_1_DELAY=900    # 15 minutes - assertive  
NUDGE_TIER_2_DELAY=1800   # 30 minutes - sergeant mode
NUDGE_MAX_ATTEMPTS=5

# Context Configuration (cognitive load management)
CONTEXT_WINDOW_SIZE=4000
TRACE_MEMORY_RETENTION_DAYS=90
FRAME_CACHE_TTL=3600

# Agent Configuration
DEFAULT_AGENT_TEMPERATURE=0.7
AGENT_MAX_RETRIES=3
AGENT_TIMEOUT=30

# Authentication Configuration (auto-generated secure secret)
SESSION_DURATION_HOURS=24
JWT_SECRET=your-secret-key-change-in-production

# Feature Flags
ENABLE_VOICE_INPUT=false
ENABLE_SCREEN_MONITORING=false
ENABLE_PUNISHMENT_MODE=false
ENABLE_ENERGY_TRACKING=true

# Optional Integrations (leave blank to disable)
